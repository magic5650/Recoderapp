<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mplaybg"
    tools:context="com.magicrecoder.recoderapp.MediaPlayActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="32dp"
        android:background="#a0ffffff">
        <ListView
            android:id="@+id/recent_play_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@android:style/Widget.Holo.ListView">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tx_currentTime"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_white"/>
            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/seedBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:maxHeight="24dp"
                android:minHeight="24dp"
                style="@android:style/Widget.DeviceDefault.SeekBar"
                android:thumb="@drawable/ic_seekbar_thumb"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tx_maxTime"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backToRecorder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:padding="15dp"
                android:layout_marginEnd="10dp"/>
            <ImageView
                android:id="@+id/prev"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_skip_previous_white_24dp"
                android:padding="16dp"
                android:layout_marginStart="8dp"/>
            <ImageView
                android:id="@+id/play"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_play_arrow_24dp" />
            <ImageView
                android:id="@+id/pause"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_pause_24dp" />
            <ImageView
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_skip_next_white_24dp"
                android:padding="16dp"
                android:layout_marginEnd="8dp"/>
            <ImageView
                android:id="@+id/delAudio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_delete"
                android:padding="16dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
